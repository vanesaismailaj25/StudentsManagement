@inherits LayoutComponentBase
<PageTitle> Index </PageTitle>

<DxGridLayout>
    <Rows>
        <DxGridLayoutRow Height="10vh" />
        <DxGridLayoutRow Height="80vh" />
        <DxGridLayoutRow Height="10vh" />
    </Rows>

    <Columns>
        <DxGridLayoutColumn Width="100%" />
    </Columns>

    <Items>
        <DxGridLayoutItem Row="0" Column="0">
            <Template>
                <NavBar/>
            </Template>
        </DxGridLayoutItem>


        <DxGridLayoutItem Row="1" Column="0" >
            <Template>
                <div>
                    @Body
                </div>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="2" Column="0">
            <Template>
                <Footer />
            </Template>
        </DxGridLayoutItem>

    </Items>

</DxGridLayout>

<Footer />
