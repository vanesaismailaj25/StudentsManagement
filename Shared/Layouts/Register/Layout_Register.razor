@inherits LayoutComponentBase

<PageTitle> Register </PageTitle>

<DxGridLayout>
    <Rows>
        <DxGridLayoutRow Height="0vh"/>
        <DxGridLayoutRow Height="90vh"/>
        @* <DxGridLayoutRow Height="10vh"/> *@
    </Rows>

    <Columns>
        <DxGridLayoutColumn Width="100%"/>
    </Columns>

    <Items>
        <DxGridLayoutItem Row="0" Column="0">
            <Template>
                <NavBar />
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="1" Column="0">
            <Template>
                @Body
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="2" Column="0">
            <Template>
                <Footer/>
            </Template>
        </DxGridLayoutItem>

    </Items>
</DxGridLayout>